@model MerchantMVC.ViewModels.EditLocationViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutV";
}
<div class="card " style="width:auto">
    <div class="card-header">
        <h4>Edit Location - <label>@Model.LName</label></h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" data-ajax-method="POST" asp-controller="Location" data-ajax="true" data-ajax-update="#ajaxEditLocation" data-ajax-mode="replace">
            <div id="ajaxEditLocation">

                @await Html.PartialAsync("_PartialEditLocation", Model)

            </div>
        </form>
    </div>



</div>
<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a href="#lt" class="@(Model.ActiveTab==MerchantMVC.ViewModels.EditLocationViewModel.Tab.LoyaltyTransaction? "nav-link active":"nav-link")" data-toggle="tab">Loyalty Transactions</a>
    </li>
    <li class="nav-item">
        <a href="#sc" class="@(Model.ActiveTab==MerchantMVC.ViewModels.EditLocationViewModel.Tab.SupportCalls? "nav-link active":"nav-link")" data-toggle="tab">Support Calls</a>
    </li>
    <li class="nav-item">
        <a href="#bt" class="@(Model.ActiveTab==MerchantMVC.ViewModels.EditLocationViewModel.Tab.Batches? "nav-link active":"nav-link")" data-toggle="tab">Batches</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="container-fluid tab-content">
    <div id="lt" class="tab-pane active pt-3">

        @await Component.InvokeAsync("LoyaltyTran");

    </div>

    <div id="sc" class="tab-pane fade">
        <br>
       
            @await Component.InvokeAsync("CallTracking");
        
    </div>

    <div id="bt" class="tab-pane fade">
        <br>
        @await Component.InvokeAsync("Batch");

    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal" >
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="width:auto">

            </div>

        </div>
    </div>
</div>
